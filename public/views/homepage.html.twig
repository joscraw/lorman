<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">


<!-- Navigation -->
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="#page-top">
                <i class="fa fa-play-circle"></i> <span class="light">Lorman Education Services</span>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="#about">About</a>
                </li>
                <li>
                    <a class="page-scroll" href="#coffee">Have a Sec?</a>
                </li>
                <li>
                    <a class="page-scroll" href="#contact">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                {% for alert in app.session.flashbag.get('message') %}
                    <div class="alert alert-success" role="alert">{{ alert }}</div>
                {% endfor %}
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">LORMAN EDUCATION SERVICES</h1>
                    <p class="intro-text">We make awesome courses and online classes!</p>
                    <a href="#about" class="btn btn-circle page-scroll">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section id="about" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>About Lorman</h2>
            <p>We make awesome online courses and classes!</p>
        </div>
    </div>
</section>

<section id="coffee" class="content-section text-center">
    <div class="download-section">
        <div class="container">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Have a sec?</h2>
                <p>Learn more about us here!</p>
                <a href="https://www.youtube.com/watch?v=e1TLx6iZG5c" class="btn btn-default btn-lg">or Watch YouTube</a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Contact Guy Smiley</h2>
            <p>Remember Guy Smiley? Yeah, he wants to hear from you.</p>
            <form method="post" action="{{ path('main_index_post') }}">
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" class="form-control" value="{{ contact.fullName }}" name="fullName" id="fullName" placeholder="Full Name">
                    <p class="text-danger">{{ errors|error("fullName") }}</p>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" value="{{ contact.email }}" name="email" id="email" placeholder="Email">
                    <p class="text-danger">{{ errors|error("email") }}</p>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" class="form-control" value="{{ contact.phone }}" name="phone" id="phone" placeholder="Phone">
                    <p class="text-danger">{{ errors|error("phone") }}</p>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea name="message" id="message" class="form-control" placeholder="message">{{ contact.message }}</textarea>
                    <p class="text-danger">{{ errors|error("message") }}</p>
                </div>
                <button type="submit" name="submit-contact" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</section>

<!-- Map Section -->
<div id="map"></div>

<!-- Footer -->
<footer>
    <div class="container text-center">
        <p>
            <small>Copyright 2018 Lorman</small>
        </p>
    </div>
</footer>

<!-- jQuery -->
<script src="../vendor/jquery/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Plugin JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

